{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true, // ✅ default import 지원
    "resolveJsonModule": true,
    "allowJs": false, // JS 혼용 금지 (권장)
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["./**/*.ts"]
}
